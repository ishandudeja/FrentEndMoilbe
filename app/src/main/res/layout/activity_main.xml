<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center"
    android:background="@color/backgroundcolor">


    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_height="64dp"
            android:layout_width="match_parent"
            android:src="@drawable/pglogo"
            android:padding="5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/lightgray"
        >

        <android.support.v7.widget.CardView
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:layout_margin="4dp"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/lightblue"

                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"
                    android:text="Customers"
                    android:textSize="12dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="@color/lightgray"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="0"
                    android:textSize="24dp"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:id="@+id/textcustomers"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:layout_margin="4dp"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/lightblue"

                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"
                    android:text="Countries"
                    android:textSize="12dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="@color/lightgray"

                    />
                <TextView
                    android:id="@+id/textcountries"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="0"
                    android:textSize="24dp"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:layout_margin="4dp"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/lightblue"

                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"
                    android:text="Products"
                    android:textSize="12dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="@color/lightgray"

                    />
                <TextView
                    android:id="@+id/textproducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="0"
                    android:textSize="24dp"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:layout_margin="4dp"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/lightblue"

                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"
                    android:text="Sellers"
                    android:textSize="12dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textColor="@color/lightgray"

                    />
                <TextView
                    android:id="@+id/textsellers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="0"
                    android:textSize="24dp"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <android.support.v7.widget.CardView
            android:id="@+id/salesforce"
            android:layout_height="190dp"
            android:layout_width="160dp"
            android:layout_margin="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:layout_height="64dp"
                    android:layout_width="64dp"
                    android:background="@drawable/cerclebackgroundpurple"
                    android:src="@drawable/ic_supervisor_account_black_24dp"
                    android:padding="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:text="Salesforce"
                    />
                <View
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="@color/grayletter"
                    android:layout_margin="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Distribution of Salespersons"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColorHighlight="@color/grayletter"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/marketshare"
            android:layout_height="190dp"
            android:layout_width="160dp"
            android:layout_margin="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:layout_height="64dp"
                    android:layout_width="64dp"
                    android:background="@drawable/cerclebackgroundpurple"
                    android:src="@drawable/ic_pie_chart_black_24dp"
                    android:padding="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:text="Market Share"
                    />
                <View
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="@color/grayletter"
                    android:layout_margin="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Comparison with Main Competitors"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColorHighlight="@color/grayletter"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/salescard"
            android:layout_height="190dp"
            android:layout_width="160dp"
            android:layout_margin="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:layout_height="64dp"
                    android:layout_width="64dp"
                    android:background="@drawable/cerclebackgroundpurple"
                    android:src="@drawable/ic_timeline_black_24dp"
                    android:padding="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:text="Sales"
                    />
                <View
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="@color/grayletter"
                    android:layout_margin="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Sales by Year"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColorHighlight="@color/grayletter"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/clientscard"
            android:layout_height="190dp"
            android:layout_width="160dp"
            android:layout_margin="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:layout_height="64dp"
                    android:layout_width="64dp"
                    android:background="@drawable/cerclebackgroundpurple"
                    android:src="@drawable/ic_insert_chart_black_24dp"
                    android:padding="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:text="Top Clients"
                    />
                <View
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="@color/grayletter"
                    android:layout_margin="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Top 5 Best Customers by Year"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColorHighlight="@color/grayletter"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>
